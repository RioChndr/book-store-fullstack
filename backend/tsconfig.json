{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },

  "files": [
    "src/main.d.ts"
  ],
  "include": [
    "./*.js",
    "src/**/*.ts",
    "test/**/*.ts",
    "src/main.d.ts"
  ]
}
